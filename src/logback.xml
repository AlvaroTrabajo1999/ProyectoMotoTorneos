<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
	<appender name="ERROR"
		class="ch.qos.logback.core.FileAppender">
		<file> TorneoMotosError.log </file>
		<append>true</append>
		<encoder>
			<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="error">
		<appender-ref ref="ERROR" />
	</root>
</configuration>